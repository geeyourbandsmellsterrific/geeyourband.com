---
import { getCollection } from "astro:content";
import { ClientRouter } from "astro:transitions";
import "@fontsource-variable/geologica";
import geologicaWoff2 from "@fontsource-variable/geologica/files/geologica-latin-wght-normal.woff2?url";
import "@fontsource-variable/fredoka";
import fredokaWoff2 from "@fontsource-variable/fredoka/files/fredoka-latin-wght-normal.woff2?url";

import "@styles/globals.css";

const { description, title } = Astro.props;
const details = await getCollection("details");
---

<html lang="en">
  <head>
    <!-- View Transitions support -->
    <ClientRouter />

    <!-- Preloads font -->
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={geologicaWoff2}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={fredokaWoff2}
      crossorigin="anonymous"
    />

    <!-- Standard meta tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />

    <!-- SEO meta tags -->
    <meta
      name="keywords"
      content={details[0].data.keywords && details[0].data.keywords.length > 0
        ? details[0].data.keywords.join(", ")
        : ""}
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="canonical"
      href={`https://${details[0].data.link_website.toLowerCase()}${Astro.url.pathname}`}
    />
    <title>
      {
        Astro.url.pathname === "/"
          ? `${details[0].data.name}`
          : `${title} | ${details[0].data.name}`
      }
    </title>
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content={title} />
    <meta name="application-name" content={title} />
    <meta name="apple-mobile-web-app-title" content={title} />
    <meta name="twitter:title" content={title} />
    <meta name="description" content={description} />
    <meta property="og:description" content={description} />
    <meta name="twitter:description" content={description} />
    <meta
      property="og:url"
      content={`https://${details[0].data.link_website.toLowerCase()}${Astro.url.pathname}`}
    />
    <meta property="og:image" content="/assets/favicons/banner.png" />
    <meta
      property="og:image:secure_url"
      content="/assets/favicons/banner.png"
    />
    <meta property="og:image:width" content="1920" />
    <meta property="og:image:height" content="1080" />
    <meta property="og:image:alt" content={title} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="/assets/favicons/banner.png" />
    <meta name="twitter:image:width" content="1920" />
    <meta name="twitter:image:height" content="1080" />
    <meta name="twitter:image:alt" content={title} />

    <!-- Favicons -->
    <link
      rel="icon"
      type="image/png"
      href="/assets/favicons/favicon-96x96.png"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/assets/favicons/favicon.svg" />
    <link rel="shortcut icon" href="/assets/favicons/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/favicons/apple-touch-icon.png"
    />
    <meta name="apple-mobile-web-app-title" content={details[0].data.name} />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#000000" />

    <!-- Umami Analytics -->
    <!-- <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id=""></script> -->
  </head>
  <body
    class="flex flex-col justify-between min-h-screen font-sans align-middle"
  >
    <!-- Screen reader skip main nav -->
    <a class="skip" aria-label="skip to main content" href="#main"
      >Click To Skip To Main Content</a
    >
    {/* Header */}
    <header
      id="header"
      class="top-0 z-50 sticky bg-black py-4 border-purple-900/50 border-b"
    >
      <div class="mx-auto px-4 container">
      <nav
      id="main-nav"
      class="flex justify-between items-center text-white align-middle"
      >
      <a
      href="/"
      title={details[0].data.name}
      class="font-bold hover:text-yellow-400 text-2xl transition"
      >
      {details[0].data.name}
      </a>
      <!-- Desktop Navigation -->
      <ul class="hidden lg:flex gap-6" aria-label="Main navigation">
      <li>
        <a
        href="/events"
        class="hover:text-yellow-400 transition"
        title="Events"
        >
        Upcoming Shows
        </a>
      </li>
      <li>
        <a
        href="/band"
        class="hover:text-yellow-400 transition"
        title="Band Members"
        >
        Band Members
        </a>
      </li>
      <li>
        <a
        href="/book"
        class="hover:text-yellow-400 transition"
        title="Book Us"
        >
        Book Us
        </a>
      </li>
      </ul>

      <!-- Mobile Navigation -->
      <div class="lg:hidden relative">
      <button
        id="menu-button"
        aria-label="Open main menu"
        aria-controls="mobile-menu"
        aria-expanded="false"
        class="p-2 rounded focus:outline-none focus:ring-2 focus:ring-yellow-400"
        onclick="
        const menu = document.getElementById('mobile-menu');
        const btn = document.getElementById('menu-button');
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        btn.setAttribute('aria-expanded', !expanded);
        menu.classList.toggle('hidden');
        if (!expanded) {
        menu.querySelector('a')?.focus();
        }
        "
      >
        <svg
        class="w-7 h-7"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
        aria-hidden="true"
        >
        <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <ul
        id="mobile-menu"
        class="hidden right-0 z-50 absolute flex flex-col gap-2 bg-black shadow-lg mt-2 py-2 border border-purple-900/50 rounded w-48"
        role="menu"
        aria-label="Mobile main navigation"
        tabindex="-1"
      >
        <li role="none">
        <a
        href="/events"
        class="block focus:bg-purple-900/20 px-4 py-2 hover:text-yellow-400 transition"
        title="Events"
        role="menuitem"
        tabindex="0">Upcoming Shows</a
        >
        </li>
        <li role="none">
        <a
        href="/band"
        class="block focus:bg-purple-900/20 px-4 py-2 hover:text-yellow-400 transition"
        title="Band Members"
        role="menuitem"
        tabindex="0">Band Members</a
        >
        </li>
        <li role="none">
        <a
        href="/book"
        class="block focus:bg-purple-900/20 px-4 py-2 hover:text-yellow-400 transition"
        title="Book Us"
        role="menuitem"
        tabindex="0">Book Us</a
        >
        </li>
      </ul>
      </div>
      </nav>
      </div>
      <script is:inline>
      // Close mobile menu when clicking outside
      document.addEventListener('click', function (e) {
        const menu = document.getElementById('mobile-menu');
        const btn = document.getElementById('menu-button');
        if (!menu || !btn) return;
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        if (!expanded) return;
        if (
        !menu.contains(e.target) &&
        !btn.contains(e.target)
        ) {
        menu.classList.add('hidden');
        btn.setAttribute('aria-expanded', 'false');
        }
      });
      </script>
    </header>

    <main
      id="main"
      role="main"
      class="flex flex-col flex-1 justify-center bg-black min-h-screen text-white align-middle grow"
    >
      <slot />
    </main>

    {/* Footer */}
    <footer id="footer" class="bg-black py-8 border-purple-900/50 border-t">
      <div class="mx-auto px-4 text-center container">
        <section
          id="footer-logo-social"
          class="flex md:flex-row flex-col justify-center items-center gap-6 md:gap-12 mx-3 mb-12 text-center align-middle"
        >
          {/* Logo */}
          <div class="flex justify-center items-center">
            <a title={details[0].data.name} href="/">
              <img
                src="/assets/svgs/logo.svg"
                alt={details[0].data.name}
                width="350"
                height="350"
                decoding="async"
                loading="lazy"
                class="bg-transparent drop-shadow"
              />
            </a>
          </div>
          {/* Social Media */}
          <div
            class="flex md:flex-col flex-wrap justify-center items-center gap-8"
          >
            <a
              href={details[0].data.link_facebook}
              target="_blank"
              rel="noopener"
              aria-label="Facebook"
              class="flex items-center gap-2 hover:text-yellow-400 transition"
            >
              <img
                src="/assets/svgs/facebook.svg"
                alt="Facebook"
                width="50"
                height="50"
                decoding="async"
                loading="lazy"
                class="bg-transparent drop-shadow"
              />
              Facebook
            </a>
            <a
              href={details[0].data.link_instagram}
              target="_blank"
              rel="noopener"
              aria-label="Instagram"
              class="flex items-center gap-2 hover:text-yellow-400 transition"
            >
              <img
                src="/assets/svgs/instagram.svg"
                alt="Instagram"
                width="50"
                height="50"
                decoding="async"
                loading="lazy"
                class="bg-transparent drop-shadow"
              />
              Instagram
            </a>
          </div>
        </section>
        <p class="text-purple-700/50 text-sm">
          © {new Date().getFullYear()} GYBST. <br />All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
