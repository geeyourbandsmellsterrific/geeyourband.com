{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true, // necessary for Astro content collections
    "checkJs": false, // set to true if you want strict checks on your .js files 
    "baseUrl": ".",
    // creates shortcuts for imports
    "paths": {
      "@assets/*":["src/assets/*"],
      "@data/*": ["src/data/*"],
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"]
    },
    "incremental": true,
		"skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "src/**/*.astro"],
  "exclude": ["node_modules", ".astro", "dist"]
}
